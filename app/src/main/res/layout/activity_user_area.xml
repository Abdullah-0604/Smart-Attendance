<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joker.smartattendance.UserAreaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="169dp"
        android:orientation="vertical"
        android:background="@drawable/back"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="WELCOM"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HERE YOU CAN"
            android:paddingBottom="6sp"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/addstd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:drawableLeft="@drawable/add"
            android:text="ADD STUDENTS"
            android:focusable="true"
            android:drawableStart="@drawable/add" />

        <Button
            android:id="@+id/take"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:drawableLeft="@drawable/take"
            android:text="TAKE ATTENDANCE"
            android:focusable="true"
            android:drawableStart="@drawable/take" />

        <Button
            android:id="@+id/modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/modify"
            android:clickable="true"
            android:text="MODIFY RECORDS"
            android:focusable="true"
            android:drawableStart="@drawable/modify" />

        <Button
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:drawableLeft="@drawable/delete"
            android:text="REMOVE STUDENT"
            android:focusable="true"
            android:drawableStart="@drawable/delete" />

        <Button
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:drawableLeft="@drawable/report"
            android:text="REPORT STATUS"
            android:focusable="true"
            android:drawableStart="@drawable/report" />

        <Button
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:clickable="true"
            android:drawableLeft="@drawable/display"
            android:drawableStart="@drawable/display"
            android:focusable="true"
            android:text="VIEW ALL DATA"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

</RelativeLayout>
